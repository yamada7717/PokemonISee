<div class="container flex-grow mx-auto p-6 bg-white rounded-lg shadow-lg mt-24">
  <div class="flex flex-wrap justify-center gap-4 mb-4 mt-2">
    <%= link_to "構築記事一覧へ", builds_path, class: "rounded-lg bg-blue-500 px-4 py-2 text-center text-sm font-semibold text-white hover:bg-blue-600" %>
    <% if current_user != @build.user %>
      <%= link_to "ユーザーページへ", user_path(@build.user), class: "rounded-lg bg-blue-500 px-4 py-2 text-center text-sm font-semibold text-white hover:bg-blue-600" %>
    <% end %>
    <% if current_user == @build.user %>
      <%= link_to "構築記事を編集する", edit_build_path(@build), class: "rounded-lg bg-blue-500 px-4 py-2 text-center text-sm font-semibold text-white hover:bg-blue-600" %>
      <%= link_to "ポケモンパーティを登録する", new_build_pokemon_party_path(@build), class: "rounded-lg bg-blue-500 px-4 py-2 text-center text-sm font-semibold text-white hover:bg-blue-600" %>
      <%= link_to "ポケモンパーティを編集", edit_build_pokemon_party_path(@build, id: @build.id), class: "rounded-lg bg-blue-500 px-4 py-2 text-center text-sm font-semibold text-white hover:bg-blue-600" %>
    <% end %>
    <% if current_user.liked?(@build) %>
      <%= button_to 'いいねを外す', build_like_path(@build), method: :delete, class: "rounded-lg bg-gray-500 px-4 py-2 text-center text-sm font-semibold text-white hover:bg-gray-600" %>
    <% else %>
      <%= button_to 'いいね', build_like_path(@build), method: :post, class: "rounded-lg bg-red-300 px-4 py-2 text-center text-sm font-semibold text-white hover:bg-red-400" %>
    <% end %>
  </div>
  <div class="flex flex-col md:flex-row md:space-x-8">
    <div class="md:w-1/4 p-4 bg-gray-100 rounded-lg">
      <div class="text-center md:text-left">
        <h1 class="text-2xl font-bold mb-4"><%= @build.title %></h1>
        <p class="text-gray-700 mb-2">投稿者&nbsp;<%= @build.user.name %></p>
        <p class="text-gray-700 mb-2">投稿日&nbsp;<%= @build.created_at.strftime("%Y年%m月%d日") %></p>
        <p class="text-gray-700 mb-2">シーズン&nbsp;<%= @build.season %></p>
        <p class="text-gray-700 mb-2">バトルレート&nbsp;<%= display_or_default(@build.battle_rate) %></p>
        <p class="text-gray-700 mb-2">順位&nbsp;<%= display_or_default(@build.battle_rank) %></p>
        <p class="text-gray-700 mb-2">バトルタイプ&nbsp;<%= @build.battle_type %></p>
        <p class="text-gray-700">ブログ情報&nbsp;<%= display_or_default(@build.blog_url) %></p>
      </div>
    </div>
    <div class="md:w-3/4 p-4">
      <h2 class="text-xl font-bold mb-4">ポケモン情報</h2>
        <div class="flex justify-center w-full">
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4 mt-4">
            <% if @build.pokemon_parties.present? %>
              <% @build.pokemon_parties.each do |pokemon_party| %>
                <div class="flex flex-col items-center">
                  <%= display_image_if(pokemon_party.pokemon_image_url, size: "80") %>
                  <p class="text-gray-900 title-font font-medium"><%= pokemon_party.pokemon.japanese_name %></p>
                  <% if pokemon_party.item_image_url %>
                    <div class="mt-2 flex flex-col items-center">
                      <%= display_image_if(pokemon_party.item_image_url, size: "35") %>
                    </div>
                  <% else %>
                    <div class="mt-2 flex flex-col items-center">
                      <!-- 画像が無い場合のスペース -->
                      <div class="w-9 h-9 bg-transparent"></div>
                    </div>
                  <% end %>
                  <div class="mt-1">
                    <p class="text-gray-500 title-font font-medium text-sm"><%= pokemon_party.item.japanese_name %></p>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <h2 class="text-xl font-bold mt-4">構築紹介</h2>
      <div class="text-gray-700 text-sm space-y-2 mb-4">
        <p class="leading-relaxed"><%= display_or_default(@build.introduction) %></p>
      </div>
    </div>
  </div>
</div>
