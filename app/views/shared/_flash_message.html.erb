<% flash.each do |key, message| %>
  <div class="p-4 mt-4 text-sm rounded-lg <%= key == 'notice' ? 'text-green-700 bg-green-100 dark:bg-green-200 dark:text-green-800' : 'text-red-700 bg-red-100 dark:bg-red-200 dark:text-red-800' %>" role="alert">
    <span class="font-medium"><%= message %></span>
  </div>
<% end %>
